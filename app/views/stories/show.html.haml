- content_for :title do
  = @story.name

%header
  .container
    .row
      .col-md-12
        %h1= @story.name

.section
  .container
    .row
      .col-md-9
        - if @story.page_count == 1
          = image_tag @story.pages.first.image.url(:original), class: "img-responsive"
        - else
          #carousel-pages.carousel.slide
            .carousel-inner
              - if @story.blue?
                .item.active.warning_page
                  %h2 Warning
                  This story is rated blue, and is suitable for adults only.
              - @story.pages.ordered.each_with_index do |page, i|
                .item{:class => ("active" if i==0 && !@story.blue?)}
                  = image_tag page.image.url(:original), class: "img-responsive"
              - if @story.unfinished?
                .item.to_be_continued
                  %h2 To be continued&hellip;
            %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-pages"}
              %span.icon-prev
            %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-pages"}
              %span.icon-next
      .col-md-3
        .row
          .col-md-12
            .rating-box
              = rating_dot(@story)
              = rating_info(@story)
        - unless @story.page_count == 1
          .row
            .col-md-12
              = render partial: "pages/pages", object: @story.pages.ordered, locals: {story: @story}
        .row
          .col-md-12
            - if @story.description?
              .description
                = @story.description.html_safe
        .row.creators
          .col-md-12
            %h2 Creators
            .people
              %ul.people
                - @people.each do |person|
                  %li.person
                    = link_to person do
                      .person-image.thumb
                        = image_tag person.image.url(:thumb)
                      = person.name
        .row.related_stories
          .col-md-12
            %h3 More by the same creators
            .stories
              - Story.by_same_creators(@story).each do |story|
                %li.story
                  = link_to story do
                    .story-image.thumb
                      = image_tag story.cover_image.url(:thumb)
                    = story.name

= render partial: "site/footer"
