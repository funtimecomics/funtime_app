- content_for :title do
  Stories

%header
  .container
    .row
      .col-md-12
        %h1 Stories
.container
  .row
    .col-md-12
      = form_tag '', :method => :get do
        = select_tag :rating, options_for_select(Story.ratings.keys + ["unknown"], @rating), include_blank: true
        = select_tag :starts_with, options_for_select(('A'..'Z').to_a, @starts_with), include_blank: true
        = submit_tag 'Filter'
  .row
    .col-md-12
      = render partial: "stories/stories", object: @stories, person: nil

= render partial: "site/footer"
