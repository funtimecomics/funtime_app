- content_for :title do
  = @issue.title

%header
  .container
    .row
      .col-md-8
        %h1= @issue.title
        .rating-box
          = rating_dot(@issue)
          = rating_info(@issue)
        - if @issue.description?
          = @issue.description.html_safe
      .col-md-4
        = render partial: "issues/featured_issue", locals: { issue: @issue }

.section
  .container
    .row
      .col-md-9
        - if @issue.pages.any?
          = render partial: "pages/carousel", locals: {collection_name: "issue", show_warning: @issue.blue?, pages: @pages}
      .col-md-3
        - if @issue.pages.any?
          = render partial: "pages/pages", object: @pages
= render partial: "site/footer"
